@page "/varietyClone/add"
@using CitrsLite.Business.ViewModels.VarietyCloneViewModels
@inject VarietyCloneFormViewModel model
@using CitrsLite.Business.Enums


<HeadContent>
    <h3>Variety Clone Form</h3>
</HeadContent>

<hr />

<EditForm Model=@model>
    <label>
        <h4>Name</h4>
        <InputText @bind-Value=model.Name></InputText>
    </label>
    <p></p>
    
    <label>
        <h4>Description</h4>
        <InputText @bind-Value=model.Description></InputText>
    </label>
    <p></p>

    <label>
        <h4>Status</h4>
        <InputText @bind-Value=model.Description></InputText>
    </label>
    <p></p>
    
    <input type="submit" class="btn btn-primary" value="Save"/>
    <p></p>
    <div>@Message</div>
</EditForm>


@code {
    private String Message = String.Empty;
}
