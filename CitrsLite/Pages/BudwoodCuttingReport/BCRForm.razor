@page "/bcr/add"
@using System.ComponentModel.DataAnnotations

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6" Align="Align.Center">Supplier</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField Label="Supplier Name" Variant="Variant.Outlined" Margin="Margin.Dense"
                        @bind-Value="model.Name" For="@(() => model.Name)" />
                    <MudTextField Label="Address" Class="mt-3" ReadOnly="true" Variant="Variant.Outlined"
                        Margin="Margin.Dense" @bind-Value="model.Address" For="@(() => model.Address)" />
                    <MudTextField Label="Participant Number" Class="mt-3" ReadOnly="true" Variant="Variant.Outlined"
                        Margin="Margin.Dense" @bind-Value="model.PartNo" For="@(() => model.PartNo)" />
                </MudCardContent>
            </MudCard>
        </MudItem>
         <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6" Align="Align.Center">Recipient</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField Label="Recipient Name" Variant="Variant.Outlined" Margin="Margin.Dense"
                        @bind-Value="model.Name" For="@(() => model.Name)" />
                    <MudTextField Label="Address" Class="mt-3" ReadOnly="true" Variant="Variant.Outlined" Margin="Margin.Dense"
                        @bind-Value="model.Address" For="@(() => model.Address)" />
                    <MudTextField Label="Participant Number" Class="mt-3" ReadOnly="true" Variant="Variant.Outlined" 
                        Margin="Margin.Dense" @bind-Value="model.PartNo" For="@(() => model.PartNo)" />
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body2" Align="Align.Center">
                Fill out the form correctly to see the success message.
            </MudText>
        </MudItem>
    </MudGrid>
</EditForm>

@code {
    RegisterAccountForm model = new RegisterAccountForm();
    bool success;

    public class RegisterAccountForm
    {
        [Required]
        public string Name { get; set; }

        public string Address { get; set; }

        public int PartNo { get; set; }
    }

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }

}
